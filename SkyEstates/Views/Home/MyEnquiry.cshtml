@model EnquiryViewModel
@*model House*@



    <h2>Your Enquiries</h2>

    @foreach (var hos in Model.Houses)
    {
        foreach (var enq in Model.Enquiries)
        {
            if (hos.Id == enq.HouseID)
            {
                <div class="">

                    <div class="thumbnail">
                        <h2>@hos.Name</h2>

                        <img style="width: 320px; height: 200px" src="@hos.ImageThumbnailUrl" alt="">
                        <div class="caption">
                            <h3 class="pull-right">@hos.Price.ToString("c")</h3>
                            <p class="text-center">@hos.ShortDescription</p>
                            <br />
                            <br>


                        </div>
                        <div div class="alert alert-success">
                            <h3>Your Enquiry</h3>
                            <p>@enq.Message</p>
                        </div>
                    </div>
                </div>

            }


        }


    }
