@model House

<h2>@Model.Name</h2>

<div class="thumbnail">
        <img alt="@Model.Name" src="@Model.ImageUrl" />
        <div class="caption-full">
            <h3 class="pull-right">@Model.Price</h3>
            <h3>
                <a href="#">@Model.Name</a>
            </h3>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription</p>

            <h4><a asp-controller="Enquiry" asp-action="Index"
               asp-route-id="@Model.Id">Submit an Enquiry for this Property</a></h4>

        </div>
</div>