@model HomeViewModel


    <h2>@Model.Title</h2>

    @foreach(var house in Model.Houses)
    {

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img style="width: 320px; height: 200px" src="@house.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@house.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details"
                    asp-route-id="@house.Id">@house.Name</a>
                </h3>
                <p>@house.ShortDescription</p>
            </div>
        </div>
    </div>



    }
